        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="19dp"
        android:text="These beliefs are rooted in the teachings of John Wesley and emphasize the importance of a deep relationship with God, active service to others, and a commitment to social justice. "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="406dp"
        android:layout_height="148dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="549dp"
        android:layout_marginEnd="16dp"
        android:text="Methodists hold to core beliefs and doctrines including the belief in the Triune God, salvation by grace through faith, the integration of faith and good works, the authority of Scripture and tradition, the observance of baptism and Holy Communion, engagement in social justice and outreach, the pursuit of personal holiness, and spiritual growth. "
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="409dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="463dp"
        android:layout_marginEnd="4dp"
        android:text="While there may be variations among individual Methodist churches, these beliefs provide a general framework for the Methodist tradition."
        android:textSize="15sp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_bar">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>